page {
  padding-bottom: 90rpx;
}
.receive_address .btn {
  padding: 20rpx;
}
.receive_address .btn button {
  padding: 10rpx;
  width: 60%;
}
.user {
  padding: 10rpx;
  display: flex;
}
.user .user_info {
  flex: 3;
  display: flex;
  flex-direction: column;
}
.user .user_phone {
  flex: 1;
}
.cart_content .cart_title {
  padding: 20rpx;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
  font-size: 36rpx;
}
.cart_content .cart_list .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_list .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_item .img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_item .img_wrap image {
  width: 70%;
  height: 70%;
}
.cart_content .cart_list .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_list .cart_item .cart_info .info_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_list .cart_item .cart_info .price_info {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_list .cart_item .cart_info .price_info .price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.cart_content .cart_list .cart_item .cart_info .price_info .num_box {
  display: flex;
}
.cart_content .cart_list .cart_item .cart_info .price_info .num_box .num_edit {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_content .cart_list .cart_item .cart_info .price_info .num_box .num {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  justify-content: center;
  align-items: center;
}
.bottom_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.bottom_tool .all_check {
  flex: 2;
  justify-content: center;
  align-items: center;
  display: flex;
}
.bottom_tool .info {
  text-align: right;
  padding-right: 15rpx;
  flex: 4;
}
.bottom_tool .info text {
  color: var(--themeColor);
  font-size: 35rpx;
  font-weight: 600;
}
.bottom_tool .calculate {
  padding: 30rpx;
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  background-color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
